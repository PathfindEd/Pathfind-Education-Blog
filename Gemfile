source "https://rubygems.org"

# Use github-pages to mirror GitHub Pages build environment
gem "github-pages", group: :jekyll_plugins

# Ensure the remote-theme plugin is available locally as well
gem "jekyll-remote-theme", "~> 0.4", group: :jekyll_plugins

# Useful plugins for local dev (optional)
gem "jekyll-feed"
gem "jekyll-sitemap"
gem "jekyll-paginate"
gem "jekyll-gist"